---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404">
  <main class="h-screen max-h-screen flex flex-col py-8 px-8">
    <a href="/" class="home-link">&larr; Back to home</a>
    <section>
      <h1>404</h1>
      <p>$h!t, you're on a wrong page, look up &uarr;</p>
    </section>
  </main>
</Layout>

<style>
  h1 {
    font-size: 8rem;
    font-weight: 900;
    color: var(--color-primary);
  }
  p {
    font-size: 0.7rem;
    font-weight: 400;
    opacity: 0.5;
    margin-top: -1rem;
  }
  section {
    margin-top: auto;
  }
  .home-link {
    animation: home-link 1.3s ease-in-out infinite;
    font-size: 0.9rem;
    font-weight: 200;
    opacity: 0.5;
    text-decoration: none;
    color: var(--color-primary);
    transition: all 0.15s ease-in-out;
  }
  .home-link:hover {
    opacity: 1;
  }
  @keyframes home-link {
    0% {
      translate: 0;
    }
    50% {
      translate: 0.5rem;
    }
    75% {
      translate: 0;
    }
    100% {
      translate: 0;
    }
  }
</style>
