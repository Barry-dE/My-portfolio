---
import Link from "../components/Link.astro";
import Layout from "../layouts/Layout.astro";

const currentYear = new Date().getFullYear();
---

<Layout title="Ayodeji">
  <main
    class="h-screen max-h-screen flex flex-col justify-between pt-8 pb-10 px-8"
  >
    <section>
      <h1 class="text-4xl">Ayodeji.</h1>
      <hr class="my-5" />
      <h4 class="text-sm text-right font-semibold opacity-20 -mt-1">
        Software
        <br />
        developer
      </h4>
    </section>
    <a
      href="mailto:ayodeji@trulyao.dev?subject=Hello%20Ayodeji&body=Hi%20Ayodeji%2C%0A%0AI%20am%20..."
      class="w-max text-sm font-normal border border-white self-center justify-self-center rounded-full opacity-20 hover:opacity-80 hover:px-12 px-8 py-4 transition-all cursor-pointer"
    >
      Say Hi
    </a>
    <footer class="flex justify-between">
      <section class="flex flex-col gap-3">
        <Link href="/about" newTab={false}>About</Link>
        <Link href="/blog" newTab={false}>Blog</Link>
        <Link href="/links" newTab={false}>Links</Link>
      </section>
      <section class="self-end">
        <p class="text-sm font-medium opacity-20">
          &copy; {currentYear} Ayodeji.
        </p>
      </section>
    </footer>
  </main>
</Layout>
