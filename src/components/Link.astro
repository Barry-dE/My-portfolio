---
interface Props {
  href: string;
  newTab: boolean;
}

const { href, newTab }: Props = Astro.props;
---

<a
  href={href}
  target={newTab ? "_blank" : "_self"}
  rel="noreferrer noopener"
  class="text-neutral-100 hover:text-neutral-400 hover:underline hover:underline-offset-2 transition-all"
>
  <div class="flex items-center gap-3">
    <!-- <BsArrowUpRight size={20} /> -->
    <p class="text-xl font-light"><slot /></p>
  </div>
</a>
